@import 'shared_sass.css.scss';

body {
  color: white;
  background-color: $background-color;
  background-image: url(<%= asset_path 'transparent-background.png' %>);
}

a.custom-link{
  color: $white-color;
  &:hover {
    text-decoration: none;
    color: $custom-link-color;
  }
}

legend { color: inherit }

h2 { font-weight: 200 }

.label {
  font-weight: 400;
  @include rounded(0);
}

.navbar .container {
  max-width: 940px;
  .brand {
    font-family: 'Pacifico', cursive;
    color: $background-color;
  }
}

.navbar-inner { @include rounded(0) }

.span12.main {
  .content { padding: 1em }
}

footer {
  box-shadow: inset 0 20px 20px -20px black;
  background-color: $white-color;
  height: 80px;
  margin-top: 50px;
  font-weight: 200;
  vertical-align: bottom;
  color: $background-color;
  a { color: $darken-background-color }
  a:hover {
    text-decoration: none;
    color: $background-color;
  }
  .row-fluid { line-height: 80px }
  .circle-footer {
    background-color: $lighten-background-color;
    @include rounded(50%);
    display: inline-block;
    height:35px;
    width: 35px;
    text-align: center;
    vertical-align: middle;
    line-height: 35px;
    margin-right: 10px;
    font-size: 15px;
  }
}