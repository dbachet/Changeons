@import 'shared_sass.css.scss';

body {
  color: white;
  min-height: 1200px;
  #content {
    background: url(<%= asset_path 'transparent-background.png' %>),
                url(<%= asset_path 'eolienne_white.png' %>) no-repeat top,
                $bright-on-bright;
    padding-bottom: 40px;
  }
}

a.custom-link{
  color: $bright-on-bright;
  &:hover {
    text-decoration: none;
    color: $dark-on-dark;
  }
}

legend { color: inherit }

h2 { font-weight: 200 }

.label {
  @include rounded(0);
}

a.website-title {
  font-family: 'Pacifico', cursive;
  color: $bright-on-bright;
  padding: 20px 20px 10px;
  font-size: 36px;
  &:hover, &:focus { text-decoration: none }
}

a.login-link {
  float       : right;
  margin-top  : 20px;
  font-weight : 200;
  color       : $lighten-black-color;
  &:hover {
    text-decoration : none;
    color           : $dark-on-bright;
  }
}

.navbar-inner {
  @include rounded(0);
  @include box-shadowed(none);
  background-color: $bright-on-dark;
  background-image: none;
  border: none;
}

section#top {
  background: url(<%= asset_path 'eolienne_green.png' %>) no-repeat top,
              $white;
  padding-top: 40px;
  padding-bottom: 40px;
  color: $dark-on-bright;
  @include box-shadowed(inset 0px -20px 16px -20px #000);
  .slogan {
    padding: 1em;
    font-size: 26px;
    text-align: center;
    b {
      font-weight: 200;
    }
    small {
      font-family: 'Pacifico', cursive;
      font-weight: 200;
      color: $bright-on-bright;
    }
  }
  .home {
    .arguments {
      height: 0px;
      overflow: hidden;
      p {
        font-weight: 200;
        padding: 1em;
        text-align: justify;
        span.icon {
          width: 20px;
          display: inline-block;
        }
      }
    }
  }
}

section#links-new {
  padding: 0;
  h1 {
    padding-left: 49px;
    color: $bright-on-dark;
    padding: 0 45px 22px 25px;
    font-weight: 100;
    font-size: 41px;
    text-shadow: 0 1px 1px #000;
  }
}

section#sidebar {
  margin-top: 80px;
  padding: 0;
  h1 {
    padding-left: 49px;
    color: $bright-on-dark;
    padding: 0 45px 22px 25px;
    font-weight: 100;
    font-size: 41px;
    text-align: center;
    text-shadow: 0 1px 1px #000;
  }
  p {
    color: $dark-on-dark;
    font-weight: 200;
    padding: 0 3em 0;
    text-align: justify;
    .important {
      color: $bright-on-dark;
      display: inline-block;
      text-align: left;
      font-size: 77%;
      width: 100%;
      span.icon {
        width: 25px;
        display: inline-block;
      }
    }
    &.create-account {
      font-size: 90%;
      text-align: center;
      color: $bright-on-dark;
      a {color: $dark-on-dark;}
    }
  }
}

.share-link-button {
  text-align: center;
  margin-bottom: 30px;
  a.circle {
    display: inline-block;
    height: 110px;
    width: 110px;
    background: $white;
    line-height: 110px;
    text-align: center;
    @include rounded(50%);
    margin: 0 auto;
    color: $bright-on-bright;
    @include box-shadowed(0px 0px 10px $lighten-black-color);
    &:hover { @include box-shadowed(0px 0px 20px $lighten-black-color) }
    span {
      font-family: 'Pacifico', cursive;
      font-size: 23px;
      text-decoration: none;
      display: inline-block;
      vertical-align: middle;
      line-height: 32px;
    }
  }
}

footer {
  @include box-shadowed(inset 0 20px 20px -20px black);
  background-color: $white;
  height: 80px;
  font-weight: 200;
  vertical-align: bottom;
  color: $dark-on-bright;
  a { color: $darken-background-color }
  a:hover {
    text-decoration: none;
    color: $bright-on-bright;
  }
  .row-fluid { line-height: 80px }
  .circle-footer {
    background-color: $lighten-background-color;
    @include rounded(50%);
    display: inline-block;
    height:35px;
    width: 35px;
    text-align: center;
    vertical-align: middle;
    line-height: 35px;
    margin-right: 10px;
    font-size: 15px;
  }
}