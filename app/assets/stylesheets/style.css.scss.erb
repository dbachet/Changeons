@mixin rounded($radius: 0.5em) {
  -webkit-border-radius: $radius;
  -moz-border-radius: $radius;
  border-radius: $radius;
}

$footer-color: #fff;
$footer-link-color: darken($footer-color, 25%);

body {
  background-color: #40475a;
  background-image: url(<%= asset_path 'transparent-background.png' %>);
}

.navbar .container {
  max-width: 940px;
  .brand {
    font-family: 'Pacifico', cursive;
    color: #06A2CB;
  }
}

.navbar-inner { @include rounded(0) }

.container.frame {
  background: rgba(255,255,255,0.1);
  padding: 7px;
  @include rounded(4px);
}

.span12.main {
  background-color: white;
  .content { padding: 1em }
}

footer {
  box-shadow: inset 0 20px 20px -20px black;
  background-color: #40475a;
  height: 80px;
  margin-top: 50px;
  font-weight: 200;
  text-shadow: 0px 1px black;
  vertical-align: bottom;
  color: $footer-color;
  .row-fluid { line-height: 80px }
  a { color: $footer-color }
  a:hover {
    text-decoration: none;
    color: $footer-link-color
  }
  .circle-footer {
    background-color: rgba(255, 255, 255, 0.3);
    @include rounded(50%);
    padding: 8px 10px 8px 10px;
    font-size: 1.2em;
    margin-right: 15px;
  }
}

.label { font-weight: 400 }